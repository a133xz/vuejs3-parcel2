{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "allowJs": true,
    "baseUrl": ".",
    "noEmit": true,
    "jsx": "preserve",
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue"
  ],
  "exclude": [
    "assets",
    "node_modules",
    "*.js"
  ]
}
